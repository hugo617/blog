<!-- Footer component extracted from AURORA design -->
<!-- This footer maintains the dark theme and includes brand information and navigation links -->
<footer class="footer">
    <div class="container">
        <div class="footer-content">
            <div class="footer-brand">
                <div class="logo">AURORA</div>
                <p><%= t('footer.brand_description') %></p>
            </div>

            <div class="footer-links">
                <div class="footer-column">
                    <h4><%= t('footer.navigation_title') %></h4>
                    <%= link_to "#home" do %><%= t('navigation.home') %><% end %>
                    <%= link_to posts_path do %><%= t('navigation.work') %><% end %>
                    <%= link_to "#journal" do %><%= t('navigation.journal') %><% end %>
                    <%= link_to "#about" do %><%= t('navigation.about') %><% end %>
                </div>
                <div class="footer-column">
                    <h4><%= t('footer.connect_title') %></h4>
                    <%= link_to "#" do %>Twitter<% end %>
                    <%= link_to "#" do %>GitHub<% end %>
                    <%= link_to "#" do %>LinkedIn<% end %>
                    <%= link_to "#" do %>Dribbble<% end %>
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <p>&copy; <%= Date.current.year %> <%= t('footer.copyright') %></p>
            <p><%= t('footer.made_with_love') %></p>
        </div>
    </div>
</footer>
