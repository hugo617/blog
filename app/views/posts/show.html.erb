<% presenter = PostPresenter.new(@post) %>

<article class="bg-white rounded-lg shadow-sm border">
  <!-- Post Header -->
  <div class="p-8 border-b">
    <div class="flex items-center text-sm text-gray-500 mb-4">
      <span><%= presenter.author_name %></span>
      <span class="mx-2">•</span>
      <span><%= presenter.formatted_published_date %></span>
      <span class="mx-2">•</span>
      <span><%= presenter.reading_time_text %></span>
      <span class="mx-2">•</span>
      <span><%= presenter.views_count_text %></span>
    </div>
    
    <h1 class="text-4xl font-bold text-gray-900 mb-4"><%= @post.title %></h1>
    
    <div class="flex items-center justify-between">
      <%= render TagListComponent.new(tags: @post.tags, variant: :default) %>
      
      <% if current_user == @post.user %>
        <div class="flex space-x-2">
          <%= link_to "Edit", edit_post_path(@post), 
                      class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700" %>
          <%= link_to "Delete", post_path(@post), 
                      method: :delete,
                      data: { confirm: "Are you sure?" },
                      class: "bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Post Content -->
  <div class="p-8">
    <div class="prose prose-lg max-w-none">
      <%= @post.content %>
    </div>
  </div>
</article>

<!-- Comments Section -->
<div class="mt-8">
  <div class="bg-white rounded-lg shadow-sm border p-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">
      Comments (<%= @comments.count %>)
    </h2>

    <!-- Comment Form -->
    <% if user_signed_in? %>
      <div class="mb-8 p-6 bg-gray-50 rounded-lg">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Leave a Comment</h3>
        
        <%= form_with model: [@post, @comment], local: true, class: "space-y-4" do |f| %>
          <% if @comment.errors.any? %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
              <ul class="list-disc list-inside">
                <% @comment.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div>
            <%= f.label :body, "Your Comment", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_area :body, 
                            rows: 4, 
                            class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
                            placeholder: "Share your thoughts..." %>
          </div>

          <div>
            <%= f.submit "Post Comment", 
                        class: "bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700" %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="mb-8 p-6 bg-gray-50 rounded-lg text-center">
        <p class="text-gray-600 mb-4">Please sign in to leave a comment.</p>
        <%= link_to "Sign In", new_user_session_path, 
                    class: "bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700" %>
      </div>
    <% end %>

    <!-- Comments List -->
    <div class="space-y-6">
      <% if @comments.any? %>
        <% @comments.each do |comment| %>
          <%= render CommentComponent.new(comment: comment, show_moderation: current_user&.admin?) %>
        <% end %>
      <% else %>
        <div class="text-center py-8">
          <p class="text-gray-500">No comments yet. Be the first to comment!</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Related Posts -->
<div class="mt-8">
  <div class="bg-white rounded-lg shadow-sm border p-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Related Posts</h2>
    
    <% related_posts = Post.published.where.not(id: @post.id).joins(:tags).where(tags: { id: @post.tag_ids }).distinct.limit(3) %>
    
    <% if related_posts.any? %>
      <div class="grid gap-6 md:grid-cols-3">
        <% related_posts.each do |post| %>
          <% presenter = PostPresenter.new(post) %>
          <article class="border rounded-lg p-4">
            <h3 class="font-semibold text-gray-900 mb-2">
              <%= link_to post.title, post_path(post), class: "hover:text-blue-600" %>
            </h3>
            <p class="text-sm text-gray-600 mb-2">
              <%= truncate(presenter.excerpt_or_truncated_content, length: 100) %>
            </p>
            <div class="text-xs text-gray-500">
              <%= presenter.formatted_published_date %>
            </div>
          </article>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500">No related posts found.</p>
    <% end %>
  </div>
</div>
